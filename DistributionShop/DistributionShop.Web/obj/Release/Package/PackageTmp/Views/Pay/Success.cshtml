@model DistributionShop.Models.ViewModels.OrderViewModel
@{
    ViewBag.Title = "订单支付成功";
}
@section head{
    <link href="~/Assets/web/css/index.css" rel="stylesheet" />
}

<!-- content -->
<div class="content">
    <div class="md1200" style="overflow: hidden;">
        <div class="payresultbox">
            <div class="resulttopbox">
                <img src="@Url.Content("~/Assets/web/images/icon_paysuccess.png")" alt="">
                <div class="word">
                    <p class="result">支付成功 ！</p>
                    <p>恭喜您，您的订单已经支付成功</p>
                </div>
            </div>
            <div class="resultbottombox">
                <div class="showbox">
                    <dl><dt>订单号：</dt><dd>@Model.OrderSn</dd></dl>
                    <dl><dt>订单金额：</dt><dd class="money">￥@Model.TotalPayPrice</dd></dl>
                    <dl><dt>下单时间：</dt><dd>@Model.AddTimeValue</dd></dl>
                    <dl><dt>支付方式：</dt><dd>@Model.PayChannelName</dd></dl>
                </div>
                <div class="btns">
                    <a href="@Url.Action("GetOrderDetail","UserCenter",new { orderSn=Model.OrderSn})" class="btn checkbtn">查看订单</a>
                    <a href="@Url.Action("Index","Home")" class="btn buybtn">继续购买</a>
                </div>
            </div>
        </div>
    </div>
</div>
