@model DistributionShop.Models.ViewModels.OrderDetailViewModelData
@{
    ViewBag.Title = "立即付款";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link rel="stylesheet" href="~/Assets/web/css/personal.css">
}
<!-- 内容 -->
<div class="personalcon">
    <div class="md1200">
        <div class="breadnav">
            <a href="@Url.Action("MyOrder", "UserCenter")">我的订单</a><span>&gt;</span>
            <a href="@Url.Action("GetOrderDetail", "UserCenter")?orderSn=@(Model.OrderSn)">订单详情</a><span>&gt;</span>
            <a href="javascript:;">立即付款</a>
        </div>
        <div class="paymentcon">
            <div class="title">请立即支付，确保订单有效！</div>
            <div class="paymentbox">
                <p>
                    订单号：@(Model.OrderSn) <span class="money">
                        订单金额：
                        <i class="num">￥@(Model.TotalPayPriceStr)</i>
                    </span>
                </p>
                <p>下单时间：@(Model.AddTimeValue)</p>
            </div>
            <div class="paywaybox">
                <div class="title">请选择支付方式</div>
                <div class="paywaycon">
                    <div class="wechatpay active">
                        <div class="box">
                            <img src="@Url.Content("~/Assets/web/images/wechatpay.png")" alt="" class="payimg">
                            <img src="@Url.Content("~/Assets/web/images/code.png")" alt="" class="codeimg">
                        </div>
                        <div class="word">请使用微信App “扫一扫” 完成支付</div>
                    </div>
                    <div class="alipay">
                        <img src="@Url.Content("~/Assets/web/images/alipay.png")" alt="" class="payimg">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

