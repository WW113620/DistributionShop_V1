
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/Assets/layuiadmin/layui/css/layui.css?v=1.0" media="all">
    <link rel="stylesheet" href="/Assets/layuiadmin/style/admin.css" media="all">

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="/Assets/layuiadmin/layui/layui.js"></script>
    <script src="~/Scripts/public.js"></script>
    <script src="~/Scripts/plupload/plupload.full.min.js"></script>
</head>
<body class="">
    <div class="layui-form" style="margin-top:20px;">
        <input type="hidden" id="ParentCategoryId" value="@ViewBag.parentCateId" />
        <input type="hidden" id="Depth" value="@ViewBag.Depth" />
        
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">分类名称</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" id="Name" class="layui-input" value="">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="button" class="layui-btn" id="btnSave">保存</button>
                @*<button type="button" class="layui-btn" id="btnSubmit">提交审核</button>*@
            </div>
        </div>
    </div>
</body>
</html>
<script>
  
    var  i = 0;
        function SaveContent() {
            var name = $("#Name").val();
            if (!name) {
                layer.msg("请输入分类名称！")
                return;
            }
            i = 1;
            $.post('@Url.Action("Add","Category",new { Area="Admin"})', {parentCategoryId :$("#ParentCategoryId").val(),name: name ,Depth:$("#Depth").val()}, function (result) {
              if (result && result.code == 200) {
                      layer.msg("操作成功！") 
                      setTimeout(function () {
                          parent.layer.closeAll();
                          i = 0;
                          top.$("#btnRefresh").click();
                      }, 1000);
              }
          })
        }

        $(document).on('click', '#btnSave', function () {
            if (i == 0) {
                SaveContent();
            } 
           
     });
   

</script>

