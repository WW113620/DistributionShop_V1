
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/Assets/layuiadmin/layui/css/layui.css?v=1.0" media="all">
    <link rel="stylesheet" href="/Assets/layuiadmin/style/admin.css" media="all">

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="/Assets/layuiadmin/layui/layui.js"></script>
    <script src="~/Scripts/public.js"></script>
    <script src="~/Scripts/plupload/plupload.full.min.js"></script>
</head>
<body class="">
    <div class="layui-form" style="margin-top:20px;">
        <input type="hidden" id="ParentId" value="@ViewBag.ParentId" />
        <input type="hidden" id="Level" value="@ViewBag.Level" />

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">属性名称</label>
                <div class="layui-input-inline" style="width: 300px;">
                    <input type="text" name="Name" id="Name" class="layui-input" value="" maxlength="100">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">属性描述</label>
                <div class="layui-input-inline">
                   <textarea id="Description" style="width:300px;height:100px;resize:none" class="layui-textarea" maxlength="400"></textarea>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div style="text-align: center;">
                <button type="button" class="layui-btn" id="btnSave">保存</button>
            </div>
        </div>
    </div>
</body>
</html>
<script>

    var  i = 0;
        function SaveContent() {
            var name = $("#Name").val();
            if (!name) {
                layer.msg("请输入属性名称！")
                return;
            }
            i = 1;
            debugger;
            $.post('@Url.Action("Add","Attribute",new { Area="admin"})', {parentId :$("#ParentId").val(),name: name ,Level:$("#Level").val(),Description:$("#Description").val()}, function (result) {
                debugger;
                if (result && result.code == 200) {
                        layer.msg("操作成功！")
                        setTimeout(function () {
                            parent.layer.closeAll();
                            i = 0;
                            top.$("#btnRefresh").click();
                        }, 1000);
                } else if (result && result.code == 201) {
                    layer.msg(result.msg);
                     i = 0;
                }
          })
        }

        $(document).on('click', '#btnSave', function () {
            if (i == 0) {
                SaveContent();
            }

     });


</script>

