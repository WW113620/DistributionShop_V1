@using DistributionShop.Models.Utils;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title-平台管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/Assets/layuiadmin/layui/css/layui.css?v=1.0" media="all">
    <link rel="stylesheet" href="/Assets/layuiadmin/style/admin.css" media="all">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @RenderSection("head", false)
    <script src="/Assets/layuiadmin/layui/layui.js"></script>
    <script src="~/Scripts/public.js"></script>
    <style>
        .layui-input {
            width: 212px;
        }

        .layui-unselect.layui-form-select {
            width: 210px;
        }

        textarea {
            resize: none;
        }

        a {
            cursor: pointer;
        }
    </style>
</head>
<body class="layui-layout-body">

    <div id="LAY_app">
        <div class="layui-layout layui-layout-admin">
            <div class="layui-header">

                <ul class="layui-nav layui-layout-right">
                    <li class="layui-nav-item layui-hide-xs" lay-unselect>
                        <a href="@Url.Content("~/Home/Index")" title="商城首页">
                            <i class="layui-icon layui-icon-note"></i>
                        </a>
                    </li>
                    <li class="layui-nav-item" lay-unselect>
                        <a href="javascript:;">
                            <cite>@LoginHelper.LoginName</cite>
                        </a>
                        <dl class="layui-nav-child">
                            <dd style="text-align: center;"><a href="@Url.Content("~/Admin/Account/Info")">基本信息</a></dd>
                            <dd style="text-align: center;"><a href="@Url.Content("~/Admin/Account/Password")">修改密码</a></dd>

                            <dd style="text-align: center;"><a href="@Url.Content("~/Admin/Account/LoginOut")">退出</a></dd>
                        </dl>
                    </li>

                    <li class="layui-nav-item layui-hide-xs" lay-unselect>
                        <a href="javascript:;"><i class="layui-icon layui-icon-more-vertical"></i></a>
                    </li>
                    <li class="layui-nav-item layui-show-xs-inline-block layui-hide-sm" lay-unselect>
                        <a href="javascript:;"><i class="layui-icon layui-icon-more-vertical"></i></a>
                    </li>
                </ul>
            </div>

            <!-- 侧边菜单 -->
            <div class="layui-side layui-side-menu">
                <div class="layui-side-scroll">
                    <div class="layui-logo">
                        <a style="margin-left: 28px;" href="@Url.Content("~/Admin/Home/Index")"><span>商城中心后台</span></a>
                    </div>

                    <ul class="layui-nav layui-nav-tree" lay-shrink="all" id="LAY-system-side-menu" lay-filter="layadmin-system-side-menu">
                        <li data-name="home" class="layui-nav-item">
                            <a href="@Url.Content("~/Admin/Home/Index")" lay-tips="系统主页" lay-direction="2">
                                <i class="layui-icon layui-icon-home"></i>
                                <cite>系统主页</cite>
                            </a>
                        </li>

                        <li data-name="component" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="品牌管理" lay-direction="2">
                                <i class="layui-icon layui-icon-rate-half"></i>
                                <cite>品牌管理</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd data-name="button" id="Z1">
                                    <a href="@Url.Content("~/Admin/Brand/Index")">品牌列表</a>
                                </dd>
                            </dl>

                        </li>


                        <li data-name="component" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="分类管理" lay-direction="2">
                                <i class="layui-icon layui-icon-form"></i>
                                <cite>分类管理</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd data-name="button" id="C1">
                                    <a href="@Url.Content("~/Admin/Category/Index")">分类列表</a>
                                </dd>
                            </dl>

                        </li>

                        <li data-name="component" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="商品管理" lay-direction="2">
                                <i class="layui-icon layui-icon-gift"></i>
                                <cite>商品管理</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd data-name="button" id="P2">
                                    <a href="@Url.Content("~/Admin/Attribute/Index")">属性列表</a>
                                </dd>
                                <dd data-name="button" id="P1">
                                    <a href="@Url.Content("~/Admin/Product/Index")">商品列表</a>
                                </dd>
                            </dl>
                        </li>

                        <li data-name="template" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="订单管理" lay-direction="2">
                                <i class="layui-icon layui-icon-cart"></i>
                                <cite>订单管理</cite>
                            </a>
                            <dl class="layui-nav-child">

                                <dd data-name="button" id="B1">
                                    <a href="@Url.Content("~/Admin/Order/Index")">订单列表</a>
                                </dd>

                                <dd data-name="tabs" id="B2">
                                    <a href="@Url.Content("~/Admin/Order/DetailList")">订单详情</a>
                                </dd>

                                <dd data-name="tabs" id="B3">
                                    <a href="@Url.Content("~/Admin/Order/OrderReFundIndex")">退款申请</a>
                                </dd>

                            </dl>
                        </li>


                        <li data-name="user" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="用户管理" lay-direction="2">
                                <i class="layui-icon layui-icon-user"></i>
                                <cite>用户管理</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd id="U1">
                                    <a href="@Url.Content("~/Admin/Account/List")">后台管理员</a>
                                </dd>
                                <dd id="U2" style="display:none;">
                                    <a href="@Url.Content("~/Admin/Merchant/Index")">商家列表</a>
                                </dd>
                                <dd id="U3">
                                    <a href="@Url.Content("~/Admin/User/Index")">网站用户</a>
                                </dd>
                            </dl>
                        </li>


                        <li data-name="app" class="layui-nav-item" style="display:none;">
                            <a href="javascript:;" lay-tips="应用中心" lay-direction="2">
                                <i class="layui-icon layui-icon-app"></i>
                                <cite>应用中心</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd data-name="comment">
                                    <a lay-href="app/content/comment.html">评论管理</a>
                                </dd>
                                <dd>
                                    <a lay-href="app/message/index.html">消息中心</a>
                                </dd>
                                <dd data-name="workorder">
                                    <a lay-href="app/workorder/list.html">工单系统</a>
                                </dd>

                            </dl>
                        </li>


                        <li data-name="set" class="layui-nav-item">
                            <a href="javascript:;" lay-tips="系统设置" lay-direction="2">
                                <i class="layui-icon layui-icon-set"></i>
                                <cite>系统设置</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd id="S1"><a href="@Url.Content("~/Admin/Account/Info")">基本信息</a></dd>
                                <dd id="S2"><a href="@Url.Content("~/Admin/Account/Password")">修改密码</a></dd>
                                <dd id="S3"><a href="@Url.Content("~/Admin/Account/LoginOut")">退出系统</a></dd>
                            </dl>
                        </li>

                    </ul>
                </div>
            </div>


            <!-- 主体内容 -->
            <div class="layui-body" id="LAY_app_body">
                <div class="layadmin-tabsbody-item layui-show">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.CurrentPageCode" id="hidCurrentCode" />
    @RenderSection("scripts", required: false)

</body>
</html>
<script>
    function initMenu() {
        var code = $("#hidCurrentCode").val();
        $("#LAY-system-side-menu li.layui-nav-item").removeClass("layui-nav-itemed");
        $("#LAY-system-side-menu li dd").removeClass("layui-this");
        if (code) {
            $("#" + code).addClass("layui-this");
            $("#" + code).parents("li.layui-nav-item").addClass("layui-nav-itemed");
        }
    }

    $(function () {
        initMenu();
    })
</script>

