    //取消订单
    function CancelOrder(orderSn)
    {
        $ajaxFunc("@Url.Content("~/UserCenter/CancelOrder")", { orderSn:orderSn}, function (res) {
            if (res.code === 0) {
                layer.msg(res.msg, function () {
